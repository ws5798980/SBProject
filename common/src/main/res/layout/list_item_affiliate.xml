<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|left"
    android:padding="@dimen/marginx2"
    android:background="#f2f2f2">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bg_lc_white"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_m" 
        android:paddingTop="@dimen/marginx2"
	    android:paddingBottom="@dimen/marginx2"
	    android:paddingLeft="@dimen/marginx6"
	    android:paddingRight="@dimen/marginx6"/>

</LinearLayout >
