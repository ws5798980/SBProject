<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/membership_bg">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48.0dip"
        android:elevation="1dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_prev"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="title"
            android:textColor="#000000"
            android:textSize="18.0sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp">
        <EditText
            android:id="@+id/et_text1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/edit_bg"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:hint="협회02"
            android:textSize="12sp"
            android:textColor="#bbbbbb"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/et_text2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/edit_bg"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:hint="아무개(D1E1)후원인"
            android:textSize="12sp"
            android:textColor="#bbbbbb"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/et_text3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/edit_bg"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:hint="비밀번호"
            android:textSize="12sp"
            android:textColor="#bbbbbb"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/et_text4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/edit_bg"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:hint="비밀번호 확인"
            android:textSize="12sp"
            android:textColor="#bbbbbb"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/et_text5"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bg"
                android:paddingLeft="10dp"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:textColor="#bbbbbb"
                android:singleLine="true"/>
            <com.rs.mobile.common.view.StateButton
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:text="주소찾기"
                android:textSize="12sp"
                android:textColor="#ffffff"
                app:normalBackgroundColor="#1e972a"
                app:pressedBackgroundColor="#1e972a"
                app:unableBackgroundColor="#bbbbbb"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_text6"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_bg_f2f2f2"
            android:paddingLeft="10dp"
            android:hint="주소"
            android:textSize="12sp"
            android:textColor="#bbbbbb"/>

        <EditText
            android:id="@+id/et_text7"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_bg"
            android:paddingLeft="10dp"
            android:hint="나머지 상세주소 입력"
            android:textSize="12sp"
            android:textColor="#bbbbbb"/>

        <com.rs.mobile.common.view.StateButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="완료"
            android:textColor="#ffffff"
            app:normalBackgroundColor="#1e972a"
            app:pressedBackgroundColor="#1e972a"
            app:unableBackgroundColor="#bbbbbb"/>
    </LinearLayout>
</LinearLayout>
