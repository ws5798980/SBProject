<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/membership_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48.0dip"
        android:elevation="1dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_prev"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="title"
            android:textColor="#000000"
            android:textSize="18.0sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="12sp"
                android:textColor="#444444"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.rs.mobile.common.view.ClearEditText
                    android:id="@+id/et_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/edit_bg"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:hint="1-10자로 입력해주세요"
                    android:textColor="#999999"
                    android:maxLength="10"
                    android:singleLine="true"/>
                <ImageView
                    android:id="@+id/iv_nickname_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_check_green"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="12sp"
                android:textColor="#444444"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.rs.mobile.common.view.ClearEditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/edit_bg"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:hint="8~12자로 입력해주세요"
                    android:textColor="#999999"
                    android:inputType="textPassword"
                    android:maxLength="13"
                    android:singleLine="true"/>
                <ImageView
                    android:id="@+id/iv_pwd_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_check_green"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textSize="12sp"
                android:textColor="#444444"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.rs.mobile.common.view.ClearEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/edit_bg"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:hint="example@kfme.co.kr"
                    android:textColor="#999999"
                    android:singleLine="true"/>
                <ImageView
                    android:id="@+id/iv_email_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_check_green"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성명"
                android:textSize="12sp"
                android:textColor="#444444"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.rs.mobile.common.view.ClearEditText
                    android:id="@+id/et_customer_nm"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/edit_bg"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:hint="성명"
                    android:textColor="#999999"
                    android:singleLine="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_check_green"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우편번호"
                android:textSize="12sp"
                android:textColor="#444444"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_zip_cd"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:hint="우편번호"
                    android:textSize="12sp"
                    android:textColor="#bbbbbb"
                    android:singleLine="true"
                    android:enabled="false"/>
                <com.rs.mobile.common.view.StateButton
                    android:id="@+id/btn_get_address"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:text="주소찾기"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    app:normalBackgroundColor="#1e972a"
                    app:pressedBackgroundColor="#1e972a"
                    app:unableBackgroundColor="#bbbbbb"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소"
                android:textSize="12sp"
                android:textColor="#444444"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.rs.mobile.common.view.ClearEditText
                    android:id="@+id/et_address1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/edit_bg"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:hint="주소"
                    android:textColor="#999999"
                    android:singleLine="true"
                    android:enabled="false"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_check_green"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세주소"
                android:textSize="12sp"
                android:textColor="#444444"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.rs.mobile.common.view.ClearEditText
                    android:id="@+id/et_address2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/edit_bg"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:hint="상세주소"
                    android:textColor="#999999"
                    android:singleLine="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_check_green"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>


        <com.rs.mobile.common.view.StateButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="다음"
            android:textColor="#ffffff"
            app:normalBackgroundColor="#1e972a"
            app:pressedBackgroundColor="#1e972a"
            app:unableBackgroundColor="#bbbbbb"/>
    </LinearLayout>
</LinearLayout>
