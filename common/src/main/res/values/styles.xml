<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- <style name="AppBaseTheme" parent="Theme.AppCompat.Light"> -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="RtTheme" parent="AppTheme">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item> <!-- white titlebar background -->
        <item name="android:windowBackground">@color/backgroundColor_rt_window</item> <!-- gray window background -->
        <item name="android:textColorPrimary">@color/textColor_rt_toolbar_title</item> <!-- darkgray title textcolor -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- <item name="colorPrimaryDark">@android:color/white</item> --><!-- white statusbar background -->
    <style name="DpTheme" parent="AppTheme">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item> <!-- white titlebar background -->
        <item name="android:windowBackground">@color/backgroundColor_dp_window</item> <!-- gray window background -->
        <item name="android:textColorPrimary">@color/textColor_dp_toolbar_title</item> <!-- darkgray title textcolor -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="HtTheme" parent="AppTheme">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item> <!-- white titlebar background -->
        <item name="android:windowBackground">@color/backgroundColor_ht_window</item> <!-- gray window background -->
        <item name="android:textColorPrimary">@color/textColor_ht_toolbar_title</item> <!-- darkgray title textcolor -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="RtSearchViewStyle" parent="Widget.AppCompat.SearchView">

        <!-- android:textAppearance -->
        <item name="layout">@layout/abc_search_view</item>
        <item name="queryBackground">@drawable/abc_textfield_search_material</item>
        <item name="submitBackground">@drawable/abc_textfield_search_material</item>
        <item name="closeIcon">@drawable/abc_ic_clear_mtrl_alpha</item>
        <item name="searchIcon">@drawable/abc_ic_search_api_mtrl_alpha</item>
        <item name="searchHintIcon">@drawable/abc_ic_search_api_mtrl_alpha</item>
        <item name="goIcon">@drawable/abc_ic_go_search_api_mtrl_alpha</item>
        <item name="voiceIcon">@drawable/abc_ic_voice_search_api_mtrl_alpha</item>
        <item name="commitIcon">@drawable/abc_ic_commit_search_api_mtrl_alpha</item>
        <item name="suggestionRowLayout">@layout/abc_search_dropdown_item_icons_2line</item>
    </style>

    
