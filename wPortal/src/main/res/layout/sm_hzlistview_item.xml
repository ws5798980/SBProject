<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sm_hzlistview_item"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/marginx2" >

    <com.rs.mobile.common.view.WImageView
        android:id="@+id/sm_hzlistview_item_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        fresco:roundedCornerRadius="5dp"
        fresco:viewAspectRatio="1" />

    <TextView
        android:id="@+id/sm_hzlistview_item_textview_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginx2"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_mb" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin" >

        <TextView
            android:id="@+id/sm_hzlistview_item_textview_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_b" />

        <ImageView
            android:id="@+id/sm_hzlistview_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/marginx2"
            android:src="@drawable/icon_shopping_cart"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>