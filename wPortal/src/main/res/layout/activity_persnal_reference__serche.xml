<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">

    <RelativeLayout
        android:id="@+id/navigation_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/marginx2">

        <LinearLayout
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin"
            android:paddingRight="@dimen/marginx4"
            android:paddingTop="@dimen/margin">

            <ImageView
                android:id="@+id/branch_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_return_001"
                android:src="@drawable/icon_return_002" />

        </LinearLayout>

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mk_reference_matting"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_b" />

        <LinearLayout
            android:id="@+id/share_app_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin"
            android:paddingLeft="@dimen/marginx4"
            android:paddingTop="@dimen/margin">

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_shareapp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/center_menu_lay"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/reply_btn"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dip"
            android:background="#ffffff"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:padding="@dimen/marginx2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="@string/mk_reference_matting"
                android:textColor="#333333"
                android:textSize="@dimen/my_info_bottom_text_size" />

            <EditText
                android:id="@+id/edit_reference"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:hint="@string/mk_code_plase"
                android:inputType="textNoSuggestions"
                android:selectAllOnFocus="false"
                android:background="@null"
                android:singleLine="true"
                android:text=""
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/matching_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/marginx2"
                android:gravity="center"
                android:text="@string/mk_reference_matting"
                android:textColor="#ffffff"
                android:background="#f85828"
                android:textSize="14dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginx2"
            android:gravity="center"
            android:text="@string/mk_serche_text"
            android:textColor="#333333"
            android:textSize="@dimen/my_info_bottom_text_size" />

        <TextView
            android:id="@+id/content_title"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginx2"
        android:gravity="center"
        android:text="@string/mk_reference_content"
        android:textColor="#999999"
        android:textSize="@dimen/my_info_bottom_text_size" />


        <TextView
            android:id="@+id/matting_agree"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:background="#1aac19"
            android:gravity="center"
            android:text="@string/mk_matting_ready"
            android:textColor="#ffffff"
            android:textSize="@dimen/my_info_bottom_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/enterprise_agree"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:background="#1aac19"
            android:gravity="center"
            android:text="@string/mk_enterprise_account_go"
            android:textColor="#ffffff"
            android:textSize="@dimen/my_info_bottom_text_size"
            android:visibility="gone" />

    </LinearLayout>



</LinearLayout>
