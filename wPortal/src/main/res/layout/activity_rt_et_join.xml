<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
   	android:background="#f2f2f2"
   	android:gravity="center_horizontal">

    <include layout="@layout/toolbar_rt_base1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6" />
    
    <com.rs.mobile.common.view.WImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginTop="@dimen/marginx6"/>
    
    <TextView android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_b"
        android:layout_marginTop="@dimen/marginx2"/>
        
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/marginx4"
        android:paddingBottom="@dimen/marginx4"
        android:paddingLeft="@dimen/marginx2"
        android:paddingRight="@dimen/marginx2">
        
        <LinearLayout android:id="@+id/join_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/marginx2"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#ea4048">

            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rt_et_join"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_b"
                android:layout_marginLeft="@dimen/margin"/>
            
        </LinearLayout>
        
    </LinearLayout>
    
	<LinearLayout android:id="@+id/call_btn"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:gravity="center"
	    android:orientation="horizontal"
	    android:padding="@dimen/marginx2">

	    <ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/icon_cdh"/>
	    
	    <TextView android:id="@+id/tv_phone_number"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="@dimen/margin"
	        android:textColor="#666666"
	        android:textSize="@dimen/text_size_b" />
	    
	    <ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/icon_returejko"
			android:layout_marginLeft="@dimen/margin"/>
	    
	</LinearLayout>
	
	<LinearLayout android:id="@+id/address_btn"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:gravity="center"
	    android:orientation="horizontal"
	    android:padding="@dimen/marginx2"
	    android:layout_marginTop="1dip">

	    <ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/icon_cdt"/>
	    
	    <TextView android:id="@+id/tv_address"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="@dimen/margin"
	        android:textColor="#666666"
	        android:textSize="@dimen/text_size_b" />
	    
	    <ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/icon_returejko"
			android:layout_marginLeft="@dimen/margin"/>
	    
	</LinearLayout>
	
	<LinearLayout android:id="@+id/photo_btn"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:gravity="center"
	    android:orientation="horizontal"
	    android:padding="@dimen/marginx2"
	    android:layout_marginTop="1dip">

	    <ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/icon_ctp"/>
	    
	    <TextView android:id="@+id/tv_photo"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="@dimen/margin"
	        android:text="@string/rt_seller_photo"
	        android:textColor="#666666"
	        android:textSize="@dimen/text_size_b" />
	    
	    <ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/icon_returejko"
			android:layout_marginLeft="@dimen/margin"/>
	    
	</LinearLayout>

	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:gravity="center"
	    android:orientation="horizontal"
	    android:padding="@dimen/marginx2"
	    android:layout_marginTop="1dip">

	    <ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/icon_csj"/>
	    
	    <TextView android:id="@+id/tv_bz_hour"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="@dimen/margin"
	        android:textColor="#666666"
	        android:textSize="@dimen/text_size_b" />
	</LinearLayout>
	
</LinearLayout>