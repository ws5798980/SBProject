<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/mk_sec_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/mk_text12"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <com.rs.mobile.common.view.AnimationLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/mk_sec_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="@drawable/icon_canlce_000"
            android:src="@drawable/icon_canlce_000" />
    </com.rs.mobile.common.view.AnimationLinearLayout>

</LinearLayout>