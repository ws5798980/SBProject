<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/line_img_bak"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/top_img_allbk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@null" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#26000000"
                    android:layout_height="match_parent">

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_allreturn" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/bnt_collect1"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_collect" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                android:background="#fff"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="24sp"
                            android:textColor="#ff0000"
                            android:textStyle="bold"/>
                        <RatingBar
                            android:id="@+id/rating_bar"
                            style="@style/RtRatingBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:paddingTop="8dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:id="@+id/tv_reviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:text="0" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="최근리뷰"
                            android:textSize="10sp"
                            android:textColor="#a0a0a0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:id="@+id/tv_boss_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:text="0"
                            android:textColor="#000000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="사장님댓글"
                            android:textSize="10sp"
                            android:textColor="#a0a0a0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:paddingTop="8dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="60dp"
                            android:layout_height="22dp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:text="0"
                            android:layout_marginBottom="3dp"
                            android:textColor="#000000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="거리"
                            android:textSize="10sp"
                            android:textColor="#a0a0a0"/>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:id="@+id/iv_custom_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_phonenumber"
                        android:layout_centerInParent="true"/>
                </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="45dp"
                android:layout_height="70dp">
                <LinearLayout
                    android:layout_weight="0.9"
                    android:layout_width="0dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="right"
                    android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_custom_img"
                    android:layout_width="65dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="65dp"
                    android:src="@drawable/img_default_business"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="0dp"
                    android:paddingLeft="10dp"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/tv_shopmame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商户名称"
                        android:textSize="20sp"
                        android:textColor="#fff"/>

                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/tv_sale_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="月售 0"
                        android:textSize="12sp"
                        android:textColor="#fff"/>

                </LinearLayout>
            </LinearLayout>


            </RelativeLayout>


        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dcdddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout1"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:tabSelectedTextColor="#21c043"
                    app:tabTextColor="#a0a0a0"
                    app:tabIndicatorColor="#21c043"
                    app:tabIndicatorHeight="2dp"
                    app:tabMode="fixed"
                    app:tabGravity="fill"/>

            </LinearLayout>

        </LinearLayout>
    <!--</ScrollView>-->

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_marginBottom="50dp"
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />




        <LinearLayout android:id="@+id/bottom_area"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#2b2b2b"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:gravity="center_vertical|left"/>

            <TextView android:id="@+id/pay_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/marginx3"
                android:layout_weight="1"
                android:background="#21c043"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_m"
                android:text="@string/rt_pay"
                android:gravity="center"/>

        </LinearLayout>




        <LinearLayout android:id="@+id/cart_area"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="right|bottom"
            android:clickable="true"
            android:layout_above="@id/bottom_area"
            android:visibility="gone"
            android:minHeight="200dp"
            android:background="@color/whitebb">



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f2f4f6"
                android:clickable="true"
                android:layout_marginTop="@dimen/margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/marginx2"
                    android:text="购物车"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size_m"
                    android:drawablePadding="@dimen/margin" />

                <TextView android:id="@+id/delete_all_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/marginx2"
                    android:text="@string/rt_delete_all"
                    android:textColor="#21c043"
                    android:textSize="@dimen/text_size_m"
                    android:drawableLeft="@drawable/icon_sc"
                    android:drawablePadding="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"/>

            </RelativeLayout>

            <ListView android:id="@+id/cart_list_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:scrollbars="none"
                android:divider="#f2f2f2"
                android:minHeight="150dp"
                android:dividerHeight="0.1dip"
                android:background="#ffffff"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#f2f2f2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="left|bottom"
            android:layout_marginBottom="@dimen/marginx3"
            android:layout_marginLeft="@dimen/marginx3">

            <RelativeLayout android:id="@+id/cart_count_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin">

                <ImageView
                    android:id="@+id/cart_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_cart"

                    android:layout_marginBottom="2dp"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/cart_count_text_view"
                    android:layout_width="@dimen/marginx4"
                    android:layout_height="@dimen/marginx4"
                    android:layout_alignRight="@+id/cart_icon"
                    android:layout_alignTop="@+id/cart_icon"
                    android:background="@drawable/bg_rt_circle"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_size_m"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/cart_state_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rt_empty_cart"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_m" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>


</LinearLayout>
