<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/marginx2" >

        <TextView
            android:id="@+id/applyTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_m" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/red" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/marginx2" >

        <com.rs.mobile.common.view.WImageView
            android:id="@+id/img"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginx2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_m" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/marginx2" >

        <TextView
            android:id="@+id/text_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginx2"
            android:background="@drawable/bg_black_stroke_solid_white_cor_2"
            android:padding="@dimen/marginx2"
            android:text="@string/rt_cancel_apply"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_m" />

        <TextView
            android:id="@+id/text_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginx2"
            android:background="@drawable/bg_black_stroke_solid_white_cor_2"
            android:padding="@dimen/marginx2"
            android:text="@string/rt_commit_logistic"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_m" />

        <TextView
            android:id="@+id/text_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginx2"
            android:background="@drawable/bg_black_stroke_solid_white_cor_2"
            android:padding="@dimen/marginx2"
            android:text="@string/rt_check_process"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_m" />
    </LinearLayout>

</LinearLayout>