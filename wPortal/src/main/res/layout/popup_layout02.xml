<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/have_company"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yingshui_company"
            android:layout_centerInParent="true"
            android:textColor="@color/textcolor_black"
            android:textSize="@dimen/text_size_day"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <RelativeLayout
        android:id="@+id/no_company"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mianshui_company"
            android:layout_centerInParent="true"
            android:textColor="@color/textcolor_black"
            android:textSize="@dimen/text_size_day"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <RelativeLayout
        android:id="@+id/no_choose"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_choose_company"
            android:layout_centerInParent="true"
            android:textColor="@color/textcolor_black"
            android:textSize="@dimen/text_size_day"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/cancel_pop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/maingreen"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_value"
            android:layout_centerInParent="true"
            android:textColor="@color/textcolor_black"
            android:textSize="@dimen/text_size_day"/>
    </RelativeLayout>

</LinearLayout>