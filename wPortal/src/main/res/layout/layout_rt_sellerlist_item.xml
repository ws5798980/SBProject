<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/marginx2"
    android:background="@android:color/white" >

    <com.rs.mobile.common.view.WImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="94dp"
        android:layout_height="94dp"/>

    <TextView
        android:id="@+id/tv_sellername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_thumbnail"
        android:layout_alignParentTop="true"
        android:text="-"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_m" 
        android:layout_marginLeft="14.5dp"/>

    <RatingBar
        android:id="@+id/rb_sellerrating"
        style="@style/RtRatingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_thumbnail"
        android:layout_below="@id/tv_sellername"
        android:layout_marginTop="11.5dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1" 
        android:layout_marginLeft="14.5dp"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sellername"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_toRightOf="@id/rb_sellerrating"
        android:text="@string/rt_text062"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_m" />

    <TextView
        android:id="@+id/tv_foodType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/iv_thumbnail"
        android:text=""
        android:textColor="#666666"
        android:textSize="@dimen/text_size_m" 
        android:layout_marginLeft="14.5dp"/>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin"
        android:layout_toRightOf="@id/tv_foodType"
        android:text="-m"
        android:textColor="#666666"
        android:textSize="@dimen/text_size_m" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin"
        android:gravity="center_vertical|right"
        android:text="@string/rt_text063"
        android:textColor="#666666"
        android:textSize="@dimen/text_size_m" />

