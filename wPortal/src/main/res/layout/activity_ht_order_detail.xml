                android:layout_height="wrap_content"
                android:id="@+id/tv_1"
                android:textColor="@color/textcolor_ht_666"
                android:textSize="@dimen/text_size_m"
                android:layout_marginTop="@dimen/margin"/>   
         </LinearLayout>
