            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/text_check_position"  
                      android:gravity="center">
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="@string/ht_text_048"
            android:textColor="@color/textcolor_ht_tabhost_tabspec_selected"
            android:textSize="@dimen/text_size_m"
            android:drawableLeft="@drawable/ht_icon_mapsmall"
            android:drawablePadding="@dimen/margin"
            android:gravity="center"
            />
        </LinearLayout>
        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/common_bg"/>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/text_check_telephone"
            android:gravity="center">
