<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.rs.mobile.common.view.WImageView
        android:id="@+id/good_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fresco:viewAspectRatio="2.4" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/marginx2"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_m" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/marginx2"
        android:paddingLeft="@dimen/marginx2"
        android:paddingRight="@dimen/marginx2" >

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/text_to_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/add_shoppingcart_text"
            android:padding="@dimen/marginx2"
            android:text="@string/right_to_buy"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_mb" />
    </RelativeLayout>

</LinearLayout>