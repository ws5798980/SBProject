<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    
    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/common_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyBackground="@drawable/btn_keyboard_key"
        android:keyTextColor="@color/mainblue"
        android:keyTextSize="20sp"
        android:labelTextSize="20sp"
        android:visibility="visible" />
    
    <LinearLayout
        android:id="@+id/edit_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="5dp" 
        android:layout_above="@id/keyboard_view">

        <EditText
            android:id="@+id/EditText_pay_password_key001"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="@drawable/bg_bg_stroke_solid_white_cor_2"
            android:gravity="center"
            android:maxLength="1"
            android:password="true" />

        <EditText
            android:id="@+id/EditText_pay_password_key002"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="@drawable/bg_bg_stroke_solid_white_cor_2"
            android:gravity="center"
            android:maxLength="1"
            android:password="true" />

        <EditText
            android:id="@+id/EditText_pay_password_key003"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="@drawable/bg_bg_stroke_solid_white_cor_2"
            android:gravity="center"
            android:maxLength="1"
            android:password="true" />

        <EditText
            android:id="@+id/EditText_pay_password_key004"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="@drawable/bg_bg_stroke_solid_white_cor_2"
            android:gravity="center"
            android:maxLength="1"
            android:password="true" />

        <EditText
            android:id="@+id/EditText_pay_password_key005"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="@drawable/bg_bg_stroke_solid_white_cor_2"
            android:gravity="center"
            android:maxLength="1"
            android:password="true" />

        <EditText
            android:id="@+id/EditText_pay_password_key006"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="@drawable/bg_bg_stroke_solid_white_cor_2"
            android:gravity="center"
            android:maxLength="1"
            android:password="true" />
    </LinearLayout>

</RelativeLayout>