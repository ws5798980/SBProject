<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/marginx2" 
    android:background="@color/white">
 <com.rs.mobile.common.view.WImageView
     android:id="@+id/img_hotel"
     android:layout_width="0dp"
     android:layout_height="wrap_content" 
     fresco:viewAspectRatio="1"
     android:layout_weight="1"
     />   
<LinearLayout android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/marginx2"
    >
 <TextView android:id="@+id/text_name"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textColor="@color/textcolor_ht_333"
     android:textSize="@dimen/text_size_mb"
     />
 <RelativeLayout android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/marginx2">
 <TextView android:id="@+id/text_score"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="@dimen/text_size_ms"
     android:textColor="@color/textColor_ht_score"
     android:layout_centerVertical="true"/>
 <TextView android:id="@+id/text_evluate"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="@dimen/text_size_ms"
     android:textColor="@color/textcolor_ht_666"
     android:layout_toRightOf="@+id/text_score"
     android:layout_centerVertical="true"
     android:layout_marginLeft="@dimen/marginx2"/>
 <TextView android:id="@+id/text_price"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="@dimen/text_size_mb"
     android:textColor="@color/textcolor_dp_tabhost_tabspec_selected"
     android:layout_alignParentRight="true"
     android:layout_centerVertical="true"
     android:layout_marginLeft="@dimen/marginx2"/>
 
        
 </RelativeLayout> 
 <RelativeLayout android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/marginx2">
 <TextView android:id="@+id/hotellev"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="@dimen/text_size_ms"
     android:textColor="@color/textcolor_ht_666"
     android:layout_centerVertical="true"/>
 
 <TextView android:id="@+id/text_content"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="@dimen/text_size_ms"
     android:textColor="@color/textcolor_ht_666"
     android:layout_alignParentRight="true"
     android:layout_centerVertical="true"
     android:layout_marginLeft="@dimen/marginx2"/>
 
        
 </RelativeLayout> 
 <TextView android:id="@+id/district"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/marginx2"
     android:textSize="@dimen/text_size_ms"
     android:textColor="@color/textcolor_ht_666"/>  
</LinearLayout>
</LinearLayout>
