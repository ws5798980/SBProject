<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="@dimen/marginx2"
    android:background="@color/white">
  <LinearLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_marginLeft="@dimen/marginx3">
      <LinearLayout android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="horizontal">
          <TextView android:id="@+id/text_score"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size_tmb"
          android:textStyle="bold"
          android:textColor="@color/ht_yellow"/>
          <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size_m"
          android:text="@string/ht_text_061"
          android:textColor="@color/ht_yellow"/>
          
      </LinearLayout>
      <TextView android:id="@+id/text_name"
          android:layout_weight="3"
          android:layout_width="0dp"
          android:layout_marginLeft="10dp"
          android:gravity="center_vertical"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size_mb"
         
          android:textColor="@color/textcolor_ht_333"/>
           
  </LinearLayout>  
  
<LinearLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginLeft="@dimen/marginx3">
       <TextView android:id="@+id/text_evaluate"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/marginx2"
      android:paddingTop="@dimen/margin"
      android:paddingRight="@dimen/marginx2"
      android:paddingBottom="@dimen/margin"
      android:gravity="center"
      android:background="@drawable/bg_yellow_corner"
      android:textSize="@dimen/text_size_m"
      android:textColor="@color/white"/>
      <TextView android:id="@+id/text_content"
      android:layout_width="0dp"
      android:layout_weight="3"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:gravity="center_vertical"
      android:textSize="@dimen/text_size_m"
      android:textColor="@color/textcolor_ht_999"/>
  </LinearLayout> 
  <TextView android:id="@+id/click_btn"
    android:text="@string/ht_text_062"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/marginx2"
    android:textColor="@color/textcolor_ht_tabhost_tabspec_selected"
    android:textSize="@dimen/text_size_m"
    android:gravity="right"/> 
</LinearLayout>
