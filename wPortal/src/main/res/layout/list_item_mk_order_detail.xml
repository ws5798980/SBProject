<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp" >
    
<com.rs.mobile.common.view.WImageView
            android:id="@+id/mk_goods_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            fresco:roundedCornerRadius="5dp"
            fresco:viewAspectRatio="1"
            android:layout_weight="1"/>
<LinearLayout android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:orientation="vertical"
    android:layout_marginLeft="10dp">
    <TextView android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView android:id="@+id/unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/textcolor_dp_999"
            />
        <TextView android:id="@+id/goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/textcolor_dp_999"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <TextView android:id="@+id/toatle_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor_dp_999"
        android:textSize="14sp"
        android:layout_marginTop="5dp"/>
</LinearLayout>
</LinearLayout>
