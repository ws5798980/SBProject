<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:padding="10dp"
    android:background="#00000000">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="280dp"
		android:background="@drawable/new_shop_pop1"
		android:layout_height="400dp"
		android:paddingTop="5dp">

		<RelativeLayout
			android:id="@+id/navigation_area"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#ffffff"
			android:padding="@dimen/marginx2">

			<TextView
				android:id="@+id/title_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:text="@string/kr_vote_detail_title"
				android:textColor="#111111"
				android:textSize="@dimen/text_size_mb" />

			<LinearLayout
				android:id="@+id/right_navigation_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginRight="5dp"
				android:gravity="center"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/right_navigation_img"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/icon_shareoff" />

			</LinearLayout>

		</RelativeLayout>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:paddingTop="1dp"
			android:layout_height="match_parent">


			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:paddingTop="10dp"
				android:layout_weight="6"
				android:layout_height="0dp">

				<LinearLayout
					android:id="@+id/linear_itemlist1"
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:gravity="left"
					android:layout_marginBottom="5dp"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:layout_marginLeft="15dp"
						android:text="规格:"
						android:textColor="#111111"
						android:textSize="14sp" />

					<android.support.v7.widget.RecyclerView
						android:layout_marginLeft="15dp"
						android:layout_marginTop="10dp"
						android:layout_marginBottom="20dp"
						android:id="@+id/rv_pop_list"
						android:clickable="true"
						android:layout_width="match_parent"
						android:layout_height="wrap_content" />

				</LinearLayout>

				<LinearLayout
					android:id="@+id/linear_itemlist2"
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:gravity="left"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:layout_marginLeft="15dp"
						android:text="口味:"
						android:textColor="#111111"
						android:textSize="14sp" />

					<android.support.v7.widget.RecyclerView
						android:layout_marginTop="10dp"
						android:layout_marginBottom="50dp"
						android:clickable="true"
						android:layout_marginLeft="15dp"
						android:id="@+id/rv_pop_list2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content" />

				</LinearLayout>



			</LinearLayout>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:paddingTop="5dp"
				android:background="@drawable/new_shop_pop2"
				android:layout_weight="1.2"
				android:layout_height="0dp">
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="0dp"
					android:layout_weight="5"
					android:gravity="left|center_vertical"
					android:layout_height="match_parent">

					<TextView
						android:id="@+id/pop_need_money_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:layout_marginLeft="15dp"
						android:text="0"
						android:textColor="#ED3E42"
						android:textSize="22sp" />


				</LinearLayout>
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="0dp"
					android:gravity="center"
					android:layout_weight="3"
					android:layout_height="match_parent">


					<TextView
						android:id="@+id/bnt_select"
						android:layout_width="90dp"
						android:layout_height="30dp"
						android:gravity="center"
						android:text="加入购物车"
						android:background="@drawable/new_shop_shape4"
						android:textColor="#fff"
						android:textSize="@dimen/text_size_ms" />



				</LinearLayout>

			</LinearLayout>


		</LinearLayout>
	</LinearLayout>

</LinearLayout>