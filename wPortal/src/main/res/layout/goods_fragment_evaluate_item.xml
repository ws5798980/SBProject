<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/marginx2"
    android:paddingLeft="@dimen/marginx2"
    android:paddingTop="@dimen/marginx2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.rs.mobile.common.view.WImageView
            android:id="@+id/img_head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            fresco:roundedCornerRadius="5dp"
            fresco:viewAspectRatio="1" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginx2"
            android:layout_weight="9"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/marginx2"
        android:background="@color/common_bg" />

    <RatingBar
        android:id="@+id/ratingbar"
        style="@style/MyRatingBar001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginx2"
        android:isIndicator="true" />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginx2"
        android:paddingRight="@dimen/marginx2"
        android:textColor="@color/black" />

    <!-- <HorizontalScrollView
        android:id="@+id/horizscrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/marginx2" >

        <LinearLayout
            android:id="@+id/lineimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView> -->
<GridView android:id="@+id/gv"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:numColumns="3"
     android:verticalSpacing="5dp"
     android:horizontalSpacing="5dp"
     ></GridView>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginx2"
        android:textColor="@color/inputblack"
        android:textSize="@dimen/text_size_s" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginx2"
        android:gravity="right|center_vertical" >
                <TextView
            android:id="@+id/textpraise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:drawableLeft="@drawable/ic_price"
             />
              <TextView  
        android:id="@+id/addOne_tv"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_centerInParent="true"  
        android:gravity="center"  
        android:text="+1"  
        android:textColor="#FF0000"  
        android:textSize="18dip" 
        android:layout_marginRight="@dimen/marginx2" 
        android:visibility="invisible" />  
    </LinearLayout>
     <LinearLayout android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/marginx2"
         android:padding="@dimen/marginx2"
         android:gravity="center_vertical"
         android:id="@+id/line_good"
         android:visibility="gone"
         android:background="@color/common_bg">
          <com.rs.mobile.common.view.WImageView
            android:id="@+id/img_good"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            fresco:roundedCornerRadius="5dp"
            fresco:viewAspectRatio="1" />
          <TextView android:id="@+id/text_good"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/marginx2"
              android:layout_weight="5"/>
     </LinearLayout>
</LinearLayout>