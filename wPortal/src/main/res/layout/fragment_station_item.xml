    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/rela_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginx4" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/mainblue001" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/yuan" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/marginx3"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/marginx3"
            android:layout_toRightOf="@+id/rela_left"
            android:text="ljljohojlkjljkkjlk"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_ms" />
    </RelativeLayout>

</LinearLayout>