<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical" 
    android:background="@color/white">
 <LinearLayout android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:padding="@dimen/marginx2"
     android:layout_weight="1"
     android:gravity="left"
     android:orientation="vertical">
   <TextView android:id="@+id/text_start"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="@dimen/text_size_ms"
       android:textColor="@color/black"/> 
       <TextView android:id="@+id/text_end"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/hintblack"
           android:textSize="@dimen/text_size_s"/> 
 </LinearLayout>   
<LinearLayout android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:padding="@dimen/marginx2"
     android:gravity="left"
     android:layout_weight="1"
     android:orientation="vertical">
    
    <TextView android:id="@+id/text_hallType"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="@dimen/text_size_ms"
       android:textColor="@color/black"/> 
       <TextView android:id="@+id/text_hallName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/hintblack"
           android:textSize="@dimen/text_size_s"/> 
</LinearLayout>
<LinearLayout android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:padding="@dimen/marginx2"
     android:gravity="center"
     android:layout_weight="1">
   <TextView android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/red"
        />   
</LinearLayout>
<LinearLayout android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:padding="@dimen/marginx2"
     android:layout_weight="1"
     android:gravity="center"
     android:orientation="horizontal">
   <TextView android:id="@+id/text_purchase"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="@dimen/text_size_s"
       android:textColor="@color/hintblack"/> 
       <TextView android:id="@+id/text_discount"
           android:layout_marginLeft="@dimen/margin"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/mainblue"
           android:textSize="@dimen/text_size_m"
           />   
</LinearLayout>
</LinearLayout>
