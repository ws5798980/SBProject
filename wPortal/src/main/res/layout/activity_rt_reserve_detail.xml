<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/toolbar_rt_base3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_rt_transparent_horizontal_line_large"
            android:orientation="vertical"
            android:showDividers="middle" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:divider="@drawable/divider_rt_common_horizontal_line"
                android:orientation="vertical"
                android:showDividers="beginning|middle|end" >

                <TextView
                    android:id="@+id/tv_reservestatus"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:drawableLeft="@drawable/icon_rt_reserve_detail_status_01"
                    android:drawablePadding="@dimen/marginx2"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/marginx3"
                    android:paddingRight="@dimen/marginx3"
                    android:text="@string/rt_text025"
                    android:textColor="@color/textColor_rt_toolbar_title"
                    android:textSize="@dimen/text_size_m" />

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    layout="@layout/layout_rt_sellerlist_item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="7.5dp"
                    android:paddingLeft="@dimen/marginx3"
                    android:paddingRight="@dimen/marginx3"
                    android:paddingTop="7.5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="7.5dp"
                        android:paddingTop="7.5dp" >

                        <TextView
                            android:id="@+id/tv_reserveid_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|left"
                            android:text="@string/rt_text026"
                            android:textColor="@color/textColor_rt_lightest"
                            android:textSize="@dimen/text_size_ms" />

                        <TextView
                            android:id="@+id/tv_reserveid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/marginx3"
                            android:gravity="center_vertical|left"
                            android:text=""
                            android:textColor="@color/textColor_rt_toolbar_title"
                            android:textSize="@dimen/text_size_ms" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="7.5dp"
                        android:paddingTop="7.5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|left"
                            android:text="@string/rt_text027"
                            android:textColor="@color/textColor_rt_lightest"
                            android:textSize="@dimen/text_size_ms" />

                        <TextView
                            android:id="@+id/tv_reservedate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/marginx3"
                            android:gravity="center_vertical|left"
                            android:text=""
                            android:textColor="@color/textColor_rt_toolbar_title"
                            android:textSize="@dimen/text_size_ms" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="7.5dp"
                        android:paddingTop="7.5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|left"
                            android:text="@string/rt_text028"
                            android:textColor="@color/textColor_rt_lightest"
                            android:textSize="@dimen/text_size_ms" />

                        <TextView
                            android:id="@+id/tv_personcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/marginx3"
                            android:gravity="center_vertical|left"
                            android:text="@string/rt_text029"
                            android:textColor="@color/textColor_rt_toolbar_title"
                            android:textSize="@dimen/text_size_ms" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="7.5dp"
                        android:paddingTop="7.5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|left"
                            android:text="@string/rt_text030"
                            android:textColor="@color/textColor_rt_lightest"
                            android:textSize="@dimen/text_size_ms" />

                        <TextView
                            android:id="@+id/tv_customerinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/marginx3"
                            android:gravity="center_vertical|left"
                            android:text=""
                            android:textColor="@color/textColor_rt_toolbar_title"
                            android:textSize="@dimen/text_size_ms" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_paytype"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="7.5dp"
                        android:paddingTop="7.5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|left"
                            android:text="@string/rt_text031"
                            android:textColor="@color/textColor_rt_lightest"
                            android:textSize="@dimen/text_size_ms" />

                        <TextView
                            android:id="@+id/tv_paytype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/marginx3"
                            android:gravity="center_vertical|left"
                            android:text=""
                            android:textColor="@color/textColor_rt_toolbar_title"
                            android:textSize="@dimen/text_size_ms" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="#fff7d6"
                android:drawableLeft="@drawable/icon_rt_reserve_detail_hint"
                android:drawablePadding="@dimen/marginx2"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/marginx3"
                android:paddingRight="@dimen/marginx3"
                android:text="@string/rt_text032"
                android:textColor="#bea064"
                android:textSize="@dimen/text_size_ms" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:drawableLeft="@drawable/icon_map"
                android:drawablePadding="@dimen/marginx2"
                android:drawableRight="@drawable/icon_into"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/marginx3"
                android:paddingRight="@dimen/marginx3"
                android:text=""
                android:textColor="@color/textColor_rt_selleritem_sellername"
                android:textSize="@dimen/text_size_m" />
            
            <LinearLayout android:id="@+id/participant_area"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                
                <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:padding="@dimen/marginx2"
	               	android:background="#ffffff">
	                
	                <TextView android:id="@+id/participant_count_text_view"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:gravity="center_vertical|left"
		                android:textColor="#333333"
		                android:textSize="@dimen/text_size_m" />
	                
	                <TextView android:id="@+id/check_game_result_text_view"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:visibility="gone"
			            android:gravity="center"
			            android:padding="@dimen/margin"
			            android:text="@string/rt_check_game_result"
			            android:textColor="@color/red"
			            android:textSize="@dimen/text_size_m"
			            android:background="@drawable/bg_red_stroke_solid_white_cor_2"/>
			                
	            </LinearLayout>
	            
                <HorizontalScrollView
                    android:id="@+id/participant_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" 
                    android:background="#ffffff"
                    android:layout_marginTop="1dip">

                    <LinearLayout
                        android:id="@+id/participant_list_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal" 
                        android:background="#ffffff"/>
                    
                </HorizontalScrollView>
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:divider="@drawable/divider_rt_common_horizontal_line"
                android:orientation="vertical"
                android:showDividers="beginning|middle|end" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/marginx3"
                    android:paddingRight="@dimen/marginx3"
                    android:text="@string/rt_text033"
                    android:textColor="@color/textColor_rt_toolbar_title"
                    android:textSize="@dimen/text_size_m" />

                <LinearLayout
                    android:id="@+id/ll_menucontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_rt_common_horizontal_line"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/marginx3"
                    android:paddingRight="@dimen/marginx3"
                    android:showDividers="middle" />
                    
                   <!--  <include layout="@layout/layout_rt_menu_list_item"
                        android:layout_width="match_parent"
                        android:layout_height="43.5dp"/>
                    
                    <include layout="@layout/layout_rt_menu_list_item"
                        android:layout_width="match_parent"
                        android:layout_height="43.5dp"/>  -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:divider="@drawable/divider_rt_common_horizontal_line"
                android:orientation="vertical"
                android:showDividers="beginning|end" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginx3"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/marginx3"
                    android:paddingRight="@dimen/marginx3" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:text="@string/rt_text034"
                        android:textColor="@color/textColor_rt_lightest"
                        android:textSize="@dimen/text_size_ms" />

                    <TextView
                        android:id="@+id/tv_totalamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="@string/rt_text035"
                        android:textColor="@color/textColor_rt_toolbar_title"
                        android:textSize="@dimen/text_size_ms" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/marginx3"
                    android:paddingRight="@dimen/marginx3" >

                    <TextView
                        android:id="@+id/tv_actualtotalamount_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="@string/rt_text036"
                        android:textColor="@color/textColor_rt_toolbar_title"
                        android:textSize="@dimen/text_size_ms" />

                    <TextView
                        android:id="@+id/tv_actualtotalamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="@string/rt_text035"
                        android:textColor="@color/textcolor_rt_tabhost_tabspec_selected"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginx3"
                    android:layout_marginTop="@dimen/marginx3"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/marginx3"
                    android:paddingRight="@dimen/marginx3" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text=""
                        android:textColor="@color/textColor_rt_lightest"
                        android:textSize="@dimen/text_size_ms" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="@string/rt_text036"
                        android:textColor="@color/textColor_rt_lightest"
                        android:textSize="@dimen/text_size_ms" />
                    
                </LinearLayout>
                
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/eating_tegether_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
                android:layout_marginTop="@dimen/marginx2">

                <LinearLayout
		            android:id="@+id/eating_together_btn"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:clickable="true"
		            android:orientation="horizontal" 
		            android:background="#ffffff"
		            android:layout_marginTop="1dip"
		            android:padding="@dimen/marginx2">
		
		            <TextView
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="@string/rt_eating_together" 
		                android:textColor="#333333"
		                android:textSize="@dimen/text_size_m" />
		
		            <CheckBox
		                android:id="@+id/eating_together_check_bok"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:button="@drawable/icon_rt_checkbox_meterial"
		                android:checked="true" />
		        </LinearLayout>
		        
                <LinearLayout
		            android:id="@+id/golden_bell_btn"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:clickable="true"
		            android:orientation="horizontal" 
		            android:background="#ffffff"
		            android:layout_marginTop="1dip"
		            android:padding="@dimen/marginx2"
		            android:gravity="bottom">
		
		            <TextView
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:text="@string/rt_golden_bell" 
		                android:textColor="#333333"
		                android:textSize="@dimen/text_size_m" />
		            
		            <TextView android:id="@+id/golden_bell_status"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="#666666"
		                android:textSize="@dimen/text_size_m" 
		                android:layout_marginRight="@dimen/marginx4"/>
		            
		            <TextView android:id="@+id/help_golden_bell"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/rt_msg_golden_bell" 
		                android:textColor="#e84149"
		                android:textSize="@dimen/text_size_m" 
		                android:layout_marginRight="@dimen/marginx4"/>
		
		            <CheckBox
		                android:id="@+id/golden_bell_check_bok"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:button="@drawable/icon_rt_checkbox_meterial"
		                android:checked="false" />
		            
		        </LinearLayout>
		        
                <LinearLayout 
		            android:id="@+id/ll_eat_remark"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            android:background="#ffffff"
		            android:layout_marginTop="@dimen/marginx4"
		            android:padding="@dimen/marginx2">
		            
		            <TextView
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:text="@string/rt_text037"
		                android:textColor="#333333"
		                android:textSize="@dimen/text_size_m" />
		       		
		            <EditText
		                android:id="@+id/et_eat_remark"
		                android:layout_width="match_parent"
		            	android:layout_height="wrap_content"
		            	android:singleLine="false"
		            	android:maxLength="80"
		            	android:minLines="2"
		                android:textColor="#666666"
		                android:textSize="@dimen/text_size_m" 
		                android:background="@null"
		                android:gravity="center_vertical|right"/>
		            
		        </LinearLayout>

            </LinearLayout>
            
        </LinearLayout>
        
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6" />

    <LinearLayout
        android:id="@+id/ll_footer"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@android:color/white"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>