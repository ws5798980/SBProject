<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/marginx2"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white" >
<com.rs.mobile.common.view.WImageView
    android:id="@+id/good_img"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    fresco:viewAspectRatio="1"
    />    
<LinearLayout android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="right|center_vertical">
    <TextView android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_mb"
        android:textColor="@color/black"
        android:textStyle="bold"
        
        />
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginx2"
        android:src="@drawable/f"/>
     <TextView android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_m"
        android:textColor="@color/inputblack"
        android:layout_marginTop="@dimen/marginx2"
        android:text=""
        
        />
     <TextView android:id="@+id/good_evaluate_num"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/red"
         
         android:textSize="@dimen/text_size_m"
         android:layout_marginTop="@dimen/marginx6"
         android:drawableLeft="@drawable/smile"/>
</LinearLayout>
</LinearLayout>
