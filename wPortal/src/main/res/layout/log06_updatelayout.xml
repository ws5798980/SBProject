<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/liner_white"
        android:orientation="vertical"
        android:paddingTop="20dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您有一个新的版本可以更新"
            android:textColor="#333333"
            android:textSize="20dp" />
       

        <TextView
            android:id="@+id/o06_btn_context"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:lineSpacingExtra="3dp"
            android:textColor="#333333"
            android:textSize="15dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="#dcdcdc" />

        <LinearLayout
             android:id="@+id/o06_btn_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.rs.mobile.common.view.AnimationLinearLayout
                android:id="@+id/o06_btn_cacle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/liner_left_down"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </com.rs.mobile.common.view.AnimationLinearLayout>

            <View
                 android:id="@+id/o06_btn_line"
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="#dcdcdc" />

            <com.rs.mobile.common.view.AnimationLinearLayout
                android:id="@+id/o06_btn_update"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/liner_right_down"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/log05_btn_subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="更新"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </com.rs.mobile.common.view.AnimationLinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>