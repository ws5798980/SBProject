<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="@dimen/marginx2">
  <ImageView android:id="@+id/cls_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/icon_shareoff"/> 
  <LinearLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_marginTop="@dimen/marginx4">
      <TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/ht_text_073"
          android:textColor="@color/textcolor_ht_333"
          android:textSize="@dimen/text_size_m"
          />
      <ImageView android:id="@+id/img_qr"
          android:layout_width="200dp"
          android:layout_height="200dp"
          
          android:layout_marginTop="@dimen/marginx2"
          />
      <TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/textcolor_ht_666"
          android:textSize="@dimen/text_size_m"
          android:text="@string/ht_text_074"
          android:layout_marginTop="@dimen/marginx4"/>
  </LinearLayout>
</LinearLayout>
