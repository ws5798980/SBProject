<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:weightSum="4" 
	    android:background="#ffffff">
    
	    <ListView 
	        android:id="@+id/lv_place"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@color/backgroundColor_rt_window"
	        android:divider="@null"
	        android:dividerHeight="0dp"
	        android:listSelector="@drawable/bg_rt_sellertype2_list_item"
	        />
	    
	    <!-- //TODO 明天测试效果  -->
		<ListView 
		    android:id="@+id/lv_floor"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:divider="@null"
	        android:dividerHeight="0dp"
	        android:listSelector="@drawable/bg_rt_sellertype1_list_item"
		    />
	
	</LinearLayout>
	
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/transparent55"/>
    
</LinearLayout>
