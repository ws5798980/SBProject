<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/toolbar_ht_hotel_city" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/marginx2" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ht_text_choose_city"
            android:textColor="@color/textcolor_ht_666"
            android:textSize="@dimen/text_size_ms" />

        <TextView
            android:id="@+id/text_city_choosed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginx2"
            android:background="@drawable/bg_ht_citytext"
            android:gravity="center"
            android:padding="@dimen/marginx2"
            
            android:textColor="@color/textcolor_ht_666"
            android:textSize="@dimen/text_size_m" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginx2"
            android:text="@string/ht_text_hotel_city"
            android:textColor="@color/textcolor_ht_666"
            android:textSize="@dimen/text_size_ms" />

        <GridView
            android:id="@+id/gv"
            android:layout_marginTop="@dimen/marginx2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/margin"
            android:verticalSpacing="@dimen/margin" >
        </GridView>
    </LinearLayout>

</LinearLayout>