<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
   	android:background="#f2f2f2"
   	android:gravity="center_horizontal">

    <include layout="@layout/toolbar_rt_base1" />
    
    <ListView android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="#f2f2f2"
        android:dividerHeight="1dip"
        android:scrollbars="none"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/marginx2"/>
    
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="@dimen/marginx2"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:layout_marginTop="1dip"
        android:layout_marginBottom="@dimen/marginx4">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_b"
            android:text="@string/rt_total_amount"/>
        
        <TextView android:id="@+id/total_amout_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ea4048"
            android:textSize="@dimen/text_size_b"/>
        
    </LinearLayout>
    
    <TextView android:id="@+id/share_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/rt_share_calculate_result"
        android:padding="@dimen/marginx2"
        android:gravity="center"
        android:background="#21c043"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_b"
        android:layout_margin="@dimen/marginx2"/>
    
    <TextView android:id="@+id/close_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/rt_return"
        android:padding="@dimen/marginx2"
        android:gravity="center"
        android:background="@drawable/bg_white_gray_stroke_solid_"
        android:textColor="#666666"
        android:textSize="@dimen/text_size_b"
        android:layout_margin="@dimen/marginx2"/>
    
</LinearLayout>