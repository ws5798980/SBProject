<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:padding="10dp"
    android:background="@color/white">
   <com.rs.mobile.common.view.WImageView
            android:id="@+id/mk_goods_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            fresco:roundedCornerRadius="5dp"
            fresco:viewAspectRatio="1"
            android:layout_weight="1"/>
   <LinearLayout android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="2.5"
       android:orientation="vertical"
       android:layout_marginLeft="10dp">
       <TextView android:id="@+id/item_name_cnt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/text_size_b"
           android:textColor="@color/black"/>
       <TextView android:id="@+id/rnum"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/textcolor_dp_999"
           android:textSize="@dimen/text_size_ms"
           android:layout_marginTop="10dp"/>
       <TextView android:id="@+id/order_date"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/textcolor_dp_999"
           android:textSize="@dimen/text_size_ms"
           android:layout_marginTop="5dp"/>
       <LinearLayout android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="5dp">
           <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/textcolor_dp_999"
           android:textSize="@dimen/text_size_ms"
           android:text="总金额："/>
          <TextView 
              android:id="@+id/real_amount"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/red"
           android:textSize="@dimen/text_size_ms"
           /> 
       </LinearLayout>
   </LinearLayout>  

</LinearLayout>
