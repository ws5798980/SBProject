<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="@dimen/marginx2"
    android:background="@color/white">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor_ht_333"
        android:textSize="@dimen/text_size_m"
        android:text="@string/ht_text_071"
        />
    
     <TextView android:id="@+id/text_roomNo"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor_ht_333"
        android:textSize="@dimen/text_size_m"
        android:layout_marginTop="@dimen/marginx2"/>
     <TextView android:id="@+id/text_qr"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor_ht_tabhost_tabspec_selected"
        android:textSize="@dimen/text_size_m"
        android:layout_marginTop="@dimen/marginx2"
        android:drawableLeft="@drawable/ht_icon_roomqr"
        android:text="@string/ht_text_072"
        android:drawablePadding="@dimen/margin"/>
</LinearLayout>
