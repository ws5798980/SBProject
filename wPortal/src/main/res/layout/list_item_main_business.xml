<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="10dp">
      <com.rs.mobile.common.view.WImageView
          android:id="@+id/iv_img_res"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/img_product01"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_marginLeft="10dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_business_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="productName"
                android:textSize="14sp"
                android:textColor="#000000"/>
         </LinearLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1">
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address"
                android:textSize="12sp"
                android:textColor="#666666"/>
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="800m"
                android:textSize="14sp"
                android:textColor="#666666"/>
         </RelativeLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1">
            <RatingBar
                android:id="@+id/rating_bar"
                style="@style/RtRatingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="0"
                android:stepSize="1"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_shop_heart"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>
         </RelativeLayout>

      </LinearLayout>
   </LinearLayout>

</LinearLayout>
