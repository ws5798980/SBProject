<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/marginx3"
    android:paddingRight="@dimen/marginx3">

    
    
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:textColor="#333333"
        android:textSize="@dimen/text_size_mb"
        />

    <LinearLayout
        android:id="@+id/under_line"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop="@dimen/margin"
        android:layout_alignLeft="@id/title_text_view"
        android:layout_alignRight="@id/title_text_view"
        android:layout_below="@id/title_text_view"
        android:background="#ED3E42"
        android:orientation="vertical"
        android:visibility="gone" />
    
</RelativeLayout >
